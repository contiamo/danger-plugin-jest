{
  "name": "danger-plugin-jest",
  "version": "0.0.0-development",
  "description": "Danger plugin for Jest",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc -p tsconfig.json",
    "lint": "tslint 'src/**/*.ts' -c tslint.json -p tsconfig.json",
    "test": "jest",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/macklinu/danger-plugin-jest.git"
  },
  "keywords": [
    "danger",
    "danger-plugin",
    "jest"
  ],
  "author": "Macklin Underdown <macklinu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/macklinu/danger-plugin-jest/issues"
  },
  "homepage": "https://github.com/macklinu/danger-plugin-jest#readme",
  "dependencies": {
    "strip-ansi": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.3",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.0.0",
    "danger": "^7.0.14",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333",
    "validate-commit-msg": "^2.12.1"
  },
  "jest": {
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
